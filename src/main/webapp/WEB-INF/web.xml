<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>TEPID Server</display-name>
    <servlet>
        <servlet-name>TEPID REST Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

        <!-- Register REST resources -->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>ca.mcgill.science.tepid.server.rest;com.fasterxml.jackson.jaxrs.json</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
            <param-value>ca.mcgill.science.tepid.server.server.CrossDomainFilter;ca.mcgill.science.tepid.server.server.AuthTokenFilter</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
            <param-value>ca.mcgill.science.tepid.server.auth.AuthenticationFilter</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>TEPID REST Service</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>ca.mcgill.science.tepid.server.server.BackgroundTasks</listener-class>
    </listener>
</web-app>
